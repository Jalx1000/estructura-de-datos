//---------------------------------------------------------------------------

#ifndef CSMemoriaH
#define CSMemoriaH
//---------------------------------------------------------------------------
#include <string>
#include <iostream>

using namespace std;

typedef int direccion_mem;

const int MAX_MEMORIA = 11;
const int Nulo = -1;

struct NodoM{
	int dato;
	string id;
	direccion_mem link;
};

class CSMemoria
{
    private:
		NodoM* mem;
		direccion_mem libre;
	public:
		CSMemoria();
		direccion_mem new_espacio(string cadena);
		void delete_espacio(direccion_mem dir);
		void poner_dato(direccion_mem dir, string cadena, int valor);
		void mostrar_memoria();
};


#endif
